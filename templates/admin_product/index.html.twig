{% extends 'base-admin.html.twig' %}

{% block title %}
    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/admin/datatable.min.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script rel="script" href="{{ asset('js/admin/datatable.min.css') }}"></script>
{% endblock %}
{% block body %}
    <h1>Product index</h1>
    <a href="{{ path('admin_product_new') }}" class="btn btn-success">Ajouter un produit</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Image</th>
                <th>Price</th>
                <th>Rating</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.image }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.rating }}</td>
                <td>
                    <a href="{{ path('admin_product_show', {'id': product.id}) }}">show</a>
                    <a href="{{ path('admin_product_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_product_new') }}">Create new</a>
{% endblock %}
